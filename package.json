{
  "name": "hls-playlist-reader",
  "version": "2.0.2",
  "description": "Read playlist updates from a HLS stream",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "tsc -b src test --clean; rm -Rf ./coverage",
    "compile": "tsc -b src",
    "mocha": "mocha -R dot --check-leaks 'test/*.test.js'",
    "lint": "eslint .",
    "prepublishOnly": "npm run compile -- --force",
    "pretest": "concurrently 'npm run lint' 'tsc -b test'",
    "test": "c8 --check-coverage -- npm run mocha",
    "test-cov-html": "tsc -b test && c8 -r html mocha -R dot 'test/*.test.js'",
    "test-with-polyfills": "npm run pretest && c8 --check-coverage -- npm run mocha -- -r ./test/hook-polyfills.cjs"
  },
  "keywords": [
    "streaming",
    "live",
    "video",
    "audio",
    "m3u8"
  ],
  "author": "Gil Pedersen <gpdev@gpost.dk>",
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">=14.17.0"
  },
  "exports": {
    ".": "./lib/index.js",
    "./fetcher": {
      "default": "./lib/fetcher.web.js"
    },
    "./helpers": {
      "default": "./lib/helpers.web.js"
    },
    "./playlist": "./lib/playlist.js"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hoek": "^10.0.1",
    "agentkeepalive": "^4.1.3",
    "m3u8parse": "^4.0.0-rc4",
    "uristream": "^6.3.0"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.1",
    "@hapi/eslint-plugin": "^6.0.0",
    "@hapi/hapi": "^21.2.1",
    "@hapi/inert": "^7.0.0",
    "@types/hapi__inert": "^5.2.5",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "c8": "^7.12.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.18.0",
    "joi": "^17.2.0",
    "mocha": "^10.0.0",
    "typescript": "~4.9.5",
    "web-streams-polyfill": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kanongil/hls-playlist-reader.git"
  },
  "bugs": {
    "url": "https://github.com/kanongil/hls-playlist-reader/issues"
  },
  "homepage": "https://github.com/kanongil/hls-playlist-reader"
}
